<UserControl x:Class="SchoolGrades.MyUserController.Students_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:SchoolGrades.MyUserController"
             xmlns:viewmodels="clr-namespace:SchoolGrades.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:StudentViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="302.04" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <Border>
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="LightCyan" Offset="0.4"/>
                        <GradientStop Color="#42D9C8" Offset="2"/>
                        <GradientStop Color="#42D9C8" Offset="-0.1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Border Background="White" CornerRadius="10" Height="30" VerticalAlignment="Top" Margin="5,7,5,0">
                <Grid>
                    <TextBox x:Name="Student_ID" Text="{Binding EditingStudent.ID}"
                             Style="{StaticResource MaterialDesignTextBox}"
                             materialDesign:HintAssist.Hint="ID Number"/>
                </Grid>
            </Border>


            <Border Background="White" CornerRadius="10" Height="30" VerticalAlignment="Top" Margin="5,50,5,0">
                <Grid>
                    <TextBox x:Name="Student_Name" Text="{Binding EditingStudent.Name}"
                             Style="{StaticResource MaterialDesignTextBox}"
                             materialDesign:HintAssist.Hint="Name of student"/>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="10" Height="30" VerticalAlignment="Top" Margin="5,90,5,0">
                <Grid>
                    <TextBox x:Name="Student_Class" Text="{Binding EditingStudent.Class}"
                             Style="{StaticResource MaterialDesignTextBox}"
                             materialDesign:HintAssist.Hint="Class"/>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="10" Height="30" VerticalAlignment="Top" Margin="5,130,5,0">
                <Grid>
                    <TextBox x:Name="Student_Grade" Text="{Binding EditingStudent.Grade}"
                             Style="{StaticResource MaterialDesignTextBox}"
                             materialDesign:HintAssist.Hint="Grade (1..10)" />
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="10" Height="30" VerticalAlignment="Top" Margin="5,170,5,0">
                <Grid>
                    <TextBox x:Name="Student_Absent" Text="{Binding EditingStudent.Absent}"
                             Style="{StaticResource MaterialDesignTextBox}"
                             materialDesign:HintAssist.Hint="Absent Date"/>
                </Grid>
            </Border>


            <Button Content="Insert" 
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    Foreground="White"
                    Command="{Binding AddCommand}"
                    Margin="5,215,5,0"/>



            <Button Content="Update" 
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    Foreground="White"
                    Margin="5,260,5,0" 
                    Command="{Binding UpdateCommand}"/>
        </Grid>

        <Grid  Grid.Column="1">
            <DataGrid ItemsSource="{Binding Students}" x:Name="DataGrid_Students" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="LightCyan"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,1,2"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="*" Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Student name" Width="*" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Class" Width="*" Binding="{Binding Class}"/>
                    <DataGridTextColumn Header="Grade" Width="*" Binding="{Binding Grade}"/>
                    <DataGridTextColumn Header="Absents" Width="*" Binding="{Binding Absent}"/>
                    <DataGridTemplateColumn Header="Delete Students" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate >
                                <Button Content="Delete"
        Command="{Binding DataContext.RemoveCommand, ElementName=DataGrid_Students}"
        CommandParameter="{Binding}"
        Background="#42D9C8"
        materialDesign:ShadowAssist.ShadowDepth="Depth0"
        BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

        </Grid>
    </Grid>

</UserControl>